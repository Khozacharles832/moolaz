{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "commonjs",
    "moduleResolution": "node",

    "target": "ES2022",

    "types": ["node"],

    "lib": ["ES2022"],

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "sourceMap": true,

    "strict": true,

    "skipLibCheck": true
  }
}